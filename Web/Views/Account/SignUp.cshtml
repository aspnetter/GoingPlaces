@using Web.ViewModels.Authentication
@model SignUpViewModel

@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout.cshtml";
}


<form class="form form-validate" asp-action="SignUp">
    <div class="card contain-sm">
        <div class="card-head style-primary">
            <header>Create an account</header>
        </div>
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="LoginEmail" required>
                <label asp-for="LoginEmail"></label>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="FirstName" required>
                        <label asp-for="FirstName"></label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="LastName" required>
                        <label asp-for="LastName"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" required>
                <label asp-for="Password"></label>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="PasswordConfirm" required>
                <label asp-for="PasswordConfirm"></label>
            </div>
        </div>
        <div class="card-actionbar">
            <div class="card-actionbar-row">
                <button type="submit" class="btn btn-primary btn-raised">Create account</button>
            </div>
        </div>
    </div>
</form>

